    <!--resultMap 的简化写法-->
    <resultMap id="GoodsMap" type="goods">
        <!--直接写category中重复的,其他会自动匹配-->
        <id column="id" property="id"></id>
        <result column="name" property="name"/>
        <result column="status" property="status"></result>
    </resultMap>


    <select id="queryAll" resultType="Goods">
        select g.*, c.name as categoryName
        from mall_goods as g,mall_category as c where g.categoryid=c.id
    </select>



    <select id="getByIdStepFour" resultType="com.woniumall.entity.Goods">
        select mg.name,mg.img from mall_goods mg where id=#{goodsId}
    </select>


    <select id="queryGoodsByCategoryId" resultType="com.woniumall.entity.Goods">
        select * from mall_goods where categoryid = #{categoryId}
    </select>
    
    <select id="queryGoodsByCondition" resultType="com.woniumall.entity.Goods">
        select g.*, c.name as categoryName
        from mall_goods as g,mall_category as c where g.categoryid=c.id
        <if test="name != null and name !=''">
            and g.name like concat("%",#{name},"%")
        </if>
        <if test="categoryId != null and categoryId !=''">
            and g.categoryid = #{categoryId}
        </if>
        <if test="isHot != null and isHot !=''">
            and g.ishot = #{isHot}
        </if>
        <if test="isNew != null and isNew !=''">
            and g.isnew = #{isNew}
        </if>
        <if test="status != null and status !=''">
            and g.status = #{status}
        </if>
    </select>

    <select id="queryByIds" resultType="com.woniumall.entity.Goods">
        select * from mall_goods where id in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

